    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagaArzanladyslar"
        android:layout_width="122dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:shapeAppearanceOverlay="@style/roundedCornersImageViewArzanladys"
        app:srcCompat="@drawable/pizza_1" />

    <TextView
        android:id="@+id/descriptionArzanladyslar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="7sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagaArzanladyslar"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/dataArzanladyslar"
        android:layout_width="42dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:text="27.03.2023"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageSeen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionArzanladyslar"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/imageSeen"
        android:layout_width="15dp"
        android:layout_height="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/seen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptionArzanladyslar" />

    <TextView
        android:id="@+id/seenCounterArzanladyslar"
        android:layout_width="31dp"
        android:layout_height="10dp"
        android:layout_marginEnd="7dp"
        android:text="100"
        android:textSize="7sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageSeen"
        app:layout_constraintTop_toBottomOf="@+id/descriptionArzanladyslar"
        tools:ignore="SmallSp" />


